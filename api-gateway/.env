# API Gateway Environment Variables

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://edumatch.com

# Service URLs (for Docker/Kubernetes deployment)
AUTH_SERVICE_URL=http://localhost:3001
USER_SERVICE_URL=http://localhost:3002
SCHOLARSHIP_SERVICE_URL=http://localhost:3003
APPLICATION_SERVICE_URL=http://localhost:3004
MATCHING_SERVICE_URL=http://localhost:5000
NOTIFICATION_SERVICE_URL=http://localhost:3006
MESSAGE_SERVICE_URL=http://localhost:3007
ADMIN_SERVICE_URL=http://localhost:3008

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug

# Health Check
HEALTH_CHECK_INTERVAL=30000